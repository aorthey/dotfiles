"move around tabs with ctrl+H/L
map <C-h> gT
map <C-l> gt

" zoom has 4 styles:
" a float type number
" fitwidth
" fitheight
" normal
set zoom=fitwidth
map zI zizizizizizi
map zO zozozozozozo
map zz :zoom 1<CR>
map z1 :zoom 1<CR>
map z2 :zoom 2<CR>
map z3 :zoom 3<CR>
map z4 :zoom 4<CR>
map z5 :zoom 5<CR>
map z6 :zoom 6<CR>
map z7 :zoom 7<CR>
map z8 :zoom 8<CR>
map z9 :zoom 9<CR>



"copy current pdf file to a folder called 'important'
"map zg :!ps ax &&cp `ps ax|sed -n 's/.*apvlv \(.*\.pdf\)/\1/p'|head -n1` important/<CR>

" script, installed in /usr/local/bin, which copies current file to lower subdir
map zg :!echorize pwd<CR>

" if start apvlv as fullscreen mode, default is no
set fullscreen=yes

" set window size
set width=800
set height=600

" set command timeout between two key press 
" set commandtimeout=2000

" set default dir
" set defaultdir=/home

" set if use content view
set content=no

" set if auto scroll page when at the end or begin of one pdf page
set autoscrollpage=yes
" set weather use continuous view 
set continuous=yes

" set a pad to continuous page
"set continuouspad=4

" set if auto scroll doc from 1st page when goto the last page
set autoscrolldoc=yes

" set if disable ~/.apvlvinfo, default is no
set noinfo=no

" set pdf object cache size
set pdfcache = 8

" set if use right and bottom scrollbar
set scrollbar = no

" set if use visual mode to select and copy text
set visualmode = no

" set if wrapscan text
set wrapscan = yes

" set double click action
" option value is 'word', 'line' or 'page'
set doubleclick = page

" set GUI options
" m means menu, T means toolbar
set guioptions = T

" set if use auto reload document
" > 0 means auto reload after some seconds. = 0 means not auto reload
" set autoreload = 3

" set if reverted pdf page
" set reverted = no
